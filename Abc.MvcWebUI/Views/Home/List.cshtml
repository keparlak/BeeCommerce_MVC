@model IEnumerable<Abc.MvcWebUI.Models.ProductModel>
@{
    ViewBag.Title = "List";
}
<div class="container mb-5 mt-5">
    <div class="row">

        <div class="col-md-3 ">
            @Html.Action("_GetCategories","Home")
        </div>

        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-danger" role="alert">
                    Kategoriye ait urun bulunmamaktadır!
                </div>
            }
            else
            {
                @Html.Partial("_ProductList", Model)
            }
        </div>
    </div>

</div>